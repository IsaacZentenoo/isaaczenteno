<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mongo DB - F1 test</title>
    <link rel="stylesheet" href="/css/style.css" />
</head>
<body>
    <img src="/images/StarLion.png" alt="lion brewery" />
    <h1>Welcome to my F1 DB</h1>
    <form action="/driver" method="get">
        <h2>Driver information</h2>
        <input type="text" name="num" id="num" placeholder="Number" value="<%= driver ? driver.num : '' %>" />
        <input type="text" name="code" id="code" placeholder="Code" value="<%= driver ? driver.code : '' %>" />
        <input type="text" name="name" id="name" placeholder="Name" value="<%= driver ? driver.name : '' %>" />
        <input type="text" name="lname" id="lname" placeholder="Last name" value="<%= driver ? driver.lname : '' %>" />
        <br />
        <label for="dob">Date of birth: </label>
        <input type="date" name="dob" id="dob" value="<%= driver ? driver.dob : '' %>" />
        <label for="url">Biography URL: </label>
        <input type="url" name="url" id="url" value="<%= driver ? driver.url : '' %>" />
        <br />
        <label for="nation">Nationality: </label>
        <select name="nation" id="nation">
            <% nations.forEach(function(n) { %>
                <option value="<%= n.value %>" <%= driver && driver.nation === n.value ? 'selected' : '' %>><%= n.label %></option>
            <% }) %>
        </select>
        <label for="team">Team: </label>
        <select name="team" id="team">
            <% teams.forEach(function(t) { %>
                <option value="<%= t.value %>" <%= driver && driver.team === t.value ? 'selected' : '' %>><%= t.label %></option>
            <% }) %>
        </select>
        <p> <input type="submit" /> </p>
    </form>
    <%- include('driverList', { drivers: drivers, editId: editId }) %>
</body>
</html>
